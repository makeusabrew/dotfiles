[user]
	name = Nick Payne
	email = nick@kurai.co.uk
[color]
	ui = auto
[push]
    default = current

[alias]
    prepare-merge = merge --no-ff --no-commit master
    review-merge  = diff HEAD
    preview-merge = diff release master
    lg = log --graph --date=local --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ad)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = red
